<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ly_opcoes"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:src="@drawable/img_ponto3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent">

        <ToggleButton
            android:id="@+id/tv_ProximoHorarioID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_ponto_onibus"
            android:gravity="center"
            android:padding="10dp"
            android:textOff=" PrÃ³x.:10:30"
            android:textSize="12sp"
            android:background="@android:color/transparent"
            android:checked="true"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#FF0000FF" />

        <TextView
            android:id="@+id/tv_GradeID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_horarios"
            android:gravity="center"
            android:padding="10dp"
            android:text="Grade Comple."
            android:textSize="12sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#FF0000FF" />

        <com.like.LikeButton
            android:id="@+id/mfb_LinhaFavoritaID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:like_drawable="@drawable/ic_baseline_favorite_24"
            app:unlike_drawable="@drawable/ic_baseline_favorite_not_24"
            app:icon_size="24dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>